<?xml version="1.0" encoding="UTF-8"?>  
<Configuration status="off">  
<appenders>  
    <Console name="Console" target="SYSTEM_OUT">  
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>  
    </Console>  
  </appenders>  
  <loggers>  
    <root level="all">  
      <appender-ref ref="Console"/>  
    </root>  
  </loggers>  
 <Appenders>  
     <JDBC name="databaseAppender" tableName="tb_log">  
     <ConnectionFactory class="connection.ConnectionFactory" method="getDatabaseConnection" />  
     	<Column name="createdate" isEventTimestamp="true"/>  
     	<Column name="thread" pattern="%thread" />  
     	<Column name="class" pattern="%class"/>
     	<Column name="loglevel" pattern="%level" />  
     	<Column name="message" pattern="%message"/>  
    </JDBC>  
 </Appenders>   
 <Loggers>
    <Root level="all">
      <AppenderRef ref="databaseAppender"/>
    </Root>
  </Loggers> 
</Configuration> 
